<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tiny RSS</title>
    <link rel=icon href="data:,">
    <style>
      :root {
        --white:#fffffe;
        --gray:#eff0f3;
        --black-strong:#0d0d0d;
        --black:#2a2a2a;
        --orange:#ff8e3c;
        --red:#d9376e;
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-size:16px;
        font-family:Arial,Verdana;
        font-weight:400;
        line-height:1.3;
        color:var(--black);
        background-color:var(--gray);
        user-select: none;
      }
      .container {
        max-width: 700px;
        margin: 0 auto;
        display: table;
        height: 100vh;
      }
      .links-menu {
        display: table-cell;
        vertical-align: middle;
        margin-top: 20px;
        list-style-type: none;
      }
      .links-menu__item {
        padding: 10px; 
      }
      .links-menu__item-link {
        text-decoration: none;
        color: var(--black);
        font-size: 1.3rem;
        font-weight: 500;
      }
      .links-menu__item-link:hover {
        text-decoration: underline;
      }
      .links-menu__item-counter {
        color: var(--orange);
        font-weight: 600;
        font-size: 1rem;
      }
      .links-menu__item_disabled {
        opacity: 0.4;
      }
    </style>
  </head>
  <body>
    <section class="container">
      <ul class="links-menu">
        <li class="links-menu__item <%= @starred_count.zero? ? 'links-menu__item_disabled' : nil %>">
          <a href="/posts?starred=true" class="links-menu__item-link">
            Starred
            <span class="links-menu__item-counter"><%= @starred_count > 0 ? @starred_count : nil %></span>
          </a>
        </li>
        <li class="links-menu__item <%= @read_later_count.zero? ? 'links-menu__item_disabled' : nil %>">
          <a href="/posts?read_later=true" class="links-menu__item-link">
            Read Later
            <span class="links-menu__item-counter"><%= @read_later_count > 0 ? @read_later_count : nil %></span>
          </a>
        </li>
      <li class="links-menu__item <%= @unreaded_feeds_today_count.zero? ? 'links-menu__item_disabled' : nil %>">
          <a href="/posts?<%= URI.encode_www_form(@unreaded_feeds_today_params) %>" class="links-menu__item-link">
            Today
            <span class="links-menu__item-counter"><%= @unreaded_feeds_today_count > 0 ? @unreaded_feeds_today_count : nil  %></span>
          </a>
        </li>
        <% @feeds.each do |feed| %>
          <% uri = URI(feed[:url]) %>
          <% counter = @unreaded_feeds_counts[feed[:id]].to_i %>

          <li class="links-menu__item <%= counter.zero? ? 'links-menu__item_disabled' : nil %>">
            <a href="/posts?feed_id=<%= feed[:id] %>&unviewed=true" class="links-menu__item-link">
            <%= uri.host %>
            <span class="links-menu__item-counter"><%= counter > 0 ? counter : nil %></span>
            </a>
          </li>
        <% end %>
      </ul>
    </section>
  </body>
</html>
