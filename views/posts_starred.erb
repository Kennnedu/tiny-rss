<section class="posts" id="posts">
  <% @posts.each do |post| %>
      <article class="post<%= post[:starred_at].nil? ? '' : ' post_starred' %>" data-id="<%=post[:id]%>">
        <section class="post__content <%= post[:viewed_at].nil? ? '' : 'post__content_viewed' %>">
          <img src="<%= post[:image] %>" class="post__image" loading="lazy">
          <div>
            <div class="post__title">
              <%= post[:title] %>
            </div>
            <div class="post__info">
              <%= "#{URI(post[:link]).host} / #{post[:published_at].strftime('%d %b %Y %H:%M %Z')}" %>
            </div>
            <p class="post__description">
              <%= post[:description] %>
            </p>
          </div>
        </section>
      </article>
  <% end %>
  <div class="page-end">
    <% if @posts.next_page %>
      <a href="/posts_starred?page=<%= @posts.next_page %>" hidden="" data-next-page>Next</a>
    <% end %>

    <% if @posts.pagination_record_count.zero? %>
      <p>There are no unread articles.</p>
    <% end %>
  </div>
</section>

